#!/bin/sh
# postinst script for unixpackage
#
# see: dh_installdeb(1)

set -e

NAME=unixpackage
NAME_SHORT=upkg
LEVEL=8
initd_unixpackage=/etc/init.d/$NAME
initd_upkg=/usr/sbin/upkg
sbin_unixpackage=/usr/sbin/$NAME
sbin_upkg=/usr/sbin/upkg
man_unixpackage=/usr/share/man/man8

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        # Move file to /usr/sbin and change permissions
        if [ -f $sbin_unixpackage.sbin ]; then
            mv ${sbin_unixpackage}.sbin $sbin_unixpackage
            chmod +x $sbin_unixpackage
        fi
        # Alias for binary and init script
        if [ -f $sbin_unixpackage ]; then
          ln -s $sbin_unixpackage $sbin_upkg
          chmod +x $sbin_upkg
        fi
        # Move manpage to proper location and create alias
        if [ -f $man_unixpackage/$NAME.$LEVEL ]; then
            gzip $man_unixpackage$LEVEL/$NAME.$LEVEL
            ln -s $man_unixpackage$LEVEL/$NAME.$LEVEL.gz $man_unixpackage$LEVEL/$NAME_SHORT.$LEVEL.gz
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
