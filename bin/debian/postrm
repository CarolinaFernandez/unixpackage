#!/bin/sh
# postrm script for unixpackage
#
# see: dh_installdeb(1)

set -e

NAME=unixpackage
NAME_SHORT=upkg
LEVEL=8
initd_unixpackage=/etc/init.d/$NAME
initd_upkg=/usr/sbin/upkg
sbin_unixpackage=/usr/sbin/$NAME
sbin_upkg=/usr/sbin/upkg
man_unixpackage=/usr/share/man/man8

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Remove aliases
        if [ -f $sbin_upkg ]; then
            rm $sbin_upkg
        fi
        if [ -L $initd_upkg ]; then
            rm $initd_upkg
        fi
        # Remove manpage and alias
        if [ -f $man_unixpackage/$NAMEi.$LEVEL.gz ]; then
            rm $man_unixpackage$LEVEL/$NAME.$LEVEL.gz
            rm $man_unixpackage$LEVEL/$NAME_SHORT.$LEVEL.gz
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
